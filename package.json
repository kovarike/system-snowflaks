{
  "name": "snowflaks",
  "version": "1.0.0",
  "description": "Projeto exemplo utilizando TypeScript e Node.js",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/main.js",               
    "build": "tsc",                            
    "dev": "ts-node src/main.ts",              
    "watch": "tsc -w",                          
    "lint": "eslint . --ext .ts",            
    "start:dev": "nodemon --watch src -e ts --exec ts-node src/main.ts" ,
    "th": "thrift --gen cpp mtx-client.thrift src/fs/service/client"
  },
  "keywords": [],
