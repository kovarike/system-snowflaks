{
  "compilerOptions": {
    "target": "ESNext",                   // Define o alvo de saída do código JavaScript.
    "module": "CommonJS",                 // Define o sistema de módulos (CommonJS é comum para Node.js).
    "rootDir": "./",                // Diretório raiz para os arquivos de entrada.
    "outDir": "./dist",                   // Diretório de saída dos arquivos compilados.
    "strict": true,                       // Ativa todas as verificações rigorosas.
    "esModuleInterop": true,              // Habilita a interoperabilidade entre ESModules e CommonJS.
    "forceConsistentCasingInFileNames": true, // Garante consistência em letras maiúsculas e minúsculas nos nomes de arquivos.
    "skipLibCheck": true,                 // Ignora a checagem de tipos em arquivos de declaração.
    "moduleResolution": "node",           // Usa a resolução de módulos do Node.js.
    "resolveJsonModule": true,            // Permite a importação de arquivos JSON.
    "declaration": true,                  // Gera arquivos de declaração (.d.ts).
    "declarationDir": "config/types"           // Diretório onde os arquivos de declaração serão gerados.
  },
  "include": [
    "./config/**/*",                      // Inclui todos os arquivos TypeScript no diretório "config".
    "config/types/**/*"                        // Inclui todos os arquivos TypeScript no diretório "types".
, "config/types"  ],
  "exclude": [
    "node_modules",                       // Exclui a pasta "node_modules".
    "dist"                                // Exclui a pasta "dist".
  ]
}
